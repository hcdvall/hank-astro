---
import MainLayout from './MainLayout.astro';

const { title, pubDate, description } = Astro.props;
---
<MainLayout>
  <article class="blog-post">
    <header class="blog-post-header">
      <div class="blog-post-title">{"> " + " " + title + " â–ˆ"}</div>
      <p class="blog-post-description">{description}</p>
    </header>

    <section class="blog-post-content">
        <slot />
    </section>

    <footer class="blog-post-footer">
        <p class="blog-post-date">
          Published on {pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </p>
      </footer>
  </article>

  <style>
    .blog-post {
      max-width: 800px;
      margin: 0;
      padding: 0px;
    }

    .blog-post-header {
      margin-bottom: 20px;
      text-align: left;
    }

    .blog-post-title {
      font-size: 2em;
      color: var(--markdown-header-color);
      margin: 0;
      text-shadow: 
      0px 
      0px 
      3px 
      var(--markdown-header-color), 
      0px 
      0px 
      3px 
      var(--markdown-header-color);
    }

    .blog-post-date {
      font-size: 0.9em;
      margin: 5px 0;
    }

    .blog-post-description {
      font-size: 1.2em;
      margin: 10px 0;
    }

    .blog-post-content {
      line-height: 1.6;
      font-size: 1em;
    }

    /* Markdown Content Styling */
    :global(.blog-post-content h1) {
      font-size: 2em;
      margin: 2rem 0 1rem 0;
      line-height: 1.2;
      padding-bottom: 0.5rem;
      font-weight: normal;
      color: var(--markdown-header-color)
    }

    :global(.blog-post-content h2) {
      font-size: 2em;
      color: var(--markdown-header-color);
      margin: 1.8rem 0 1rem 0;
      line-height: 1.3;
    }

    :global(.blog-post-content h3) {
      font-size: 1.5em;
      color: var(--markdown-header-color);
      margin: 1.5rem 0 0.8rem 0;
      line-height: 1.4;
    }

    :global(.blog-post-content h4) {
      font-size: 1.2em;
      color: var(--markdown-header-color);
      margin: 1.2rem 0 0.6rem 0;
    }

    :global(.blog-post-content p) {
      margin-bottom: 1.2rem;
      line-height: 1.7;
    }

    :global(.blog-post-content ul, .blog-post-content ol) {
      margin: 1rem 0;
      padding-left: 2rem;
    }

    :global(.blog-post-content li) {
      margin-bottom: 0.5rem;
      line-height: 1.6;
    }

    :global(.blog-post-content blockquote) {
      border-left: 4px solid #e5e7eb;
      padding-left: 1rem;
      margin: 1.5rem 0;
      font-style: italic;
      color: #6b7280;
    }

    :global(.blog-post-content code) {
      background-color: var(--dracula-orange);
      padding: 0.2rem 0.4rem;
      border-radius: 3px;
      font-family: 'Hermit', monospace;
      font-weight: bold;
      font-size: 0.9em;
    }

    :global(.blog-post-content pre) {
      background-color: #1f2937;
      color: #f9fafb;
      padding: 1rem;
      border-radius: 6px;
      overflow-x: auto;
      margin: 1.5rem 0;
    }

    :global(.blog-post-content pre code) {
      background-color: transparent;
      padding: 0;
      color: inherit;
    }

    :global(.blog-post-content a) {
      color: var(--markdown-header-color);
      text-decoration: underline;
    }

    :global(.blog-post-content a:hover) {
      color: var(--markdown-header-color);
    }

    :global(.blog-post-content strong) {
      font-weight: 700;
    }

    :global(.blog-post-content em) {
      font-style: italic;
    }

    :global(.blog-post-content h1, h2, h3, h4)
    {
      text-shadow: 
        0px 
        0px 
        3px 
        var(--markdown-header-color), 
        0px 
        0px 
        3px 
        var(--markdown-header-color);
    }

  </style>
</MainLayout>