---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
const { showNavbar = true, showFooter = true } = Astro.props;

---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><slot name="title" /></title>
    <script src="/theme.js" is:inline></script>
    <ClientRouter />
  </head>
  <body data-theme="dark">
    {showNavbar && <Navbar />}
    <div class="content-area">
      <div class="content-bar">
      </div>
      <main class="fade-in">
        <slot />
      </main>
    </div>
    {showFooter && <Footer />}
  </body>
</html>

<style>
  @font-face {
    font-family: 'GoodOldDOS';
    src: url('/fonts/Good Old DOS.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'Fira Code';
    src: url('/fonts/FiraCode-VariableFont_wght.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  :root {
    --dracula-background-darker: #131313;
    --dracula-background-lighter: #282a36;
    --dracula-area: #44475a;
    --dracula-foreground: #f8f8f2;
    --dracula-comment: #6272a4;
    --dracula-cyan: #8be9fd;
    --dracula-green: #50fa7b;
    --dracula-orange: #ffb86c;
    --dracula-pink: #ff79c6;
    --dracula-purple: #bd93f9;
    --dracula-red: #ff5555;
    --dracula-yellow: #f1fa8c;
    --dracula-yellow-lighter: #fcffc0;
    --dracula-blue: #6272a4;
  }

  body {
    margin: 0;
    font-family: 'Fira Code', sans-serif;
    line-height: 1.6;

    /* Default theme variables (dark theme) */
    --background-color: var(--dracula-background-darker);
    --navbar-background: var(--dracula-background-darker);
    --footer-background: var(--dracula-background-darker);
    --text-color: var(--dracula-foreground);
    --navbar-text-color: var(--dracula-green);
    --navbar-glow-color: var(--dracula-green);
    --button-background: var(--dracula-green);
    --button-hover: var(--dracula-pink);
    --button-text-color: #ffffff;
    --markdown-header-color: var(--dracula-yellow);
  }

  /* Light theme overrides */
  body[data-theme="light"] {
    --background-color: var(--dracula-yellow-lighter);
    --navbar-background: var(--dracula-yellow-lighter);
    --footer-background: var(--dracula-yellow-lighter);
    --text-color: #var(var(--dracula-background));
    --navbar-text-color: var(--dracula-pink);
    --navbar-glow-color: var(--dracula-pink);
    --button-background: var(--dracula-pink);
    --button-hover: var(--dracula-green);
    --button-text-color: #ffffff;
    --markdown-header-color: var(--dracula-purple);
  }

  /* Apply variables to the body */
  body {
    background-color: var(--background-color);
    color: var(--text-color);
  }

  main {
    padding: 2rem;
  }

  .content-area{
    max-width: 1200px;
    margin: 2rem auto;         /* Center horizontally with vertical spacing */
    padding: 0 1.5rem;
    padding-top: 80px;;
  }
