  /* Fade-in animation */
  .fade-in {
    opacity: 0;
    animation: fadeIn 1s ease-in forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Fade-out animation */
  .fade-out {
    opacity: 1;
    animation: fadeOut 1s ease-out forwards;
  }

  @keyframes fadeOut {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  @media (max-width: 700px) {
  .content-area {
    max-width: 100vw;
    margin: 2rem auto;         /* Center horizontally with vertical spacing */
    padding: 0 0rem;
    padding-top: 80px;;
  }
  main {
    padding: 1rem 0rem;
  }
  body {
    font-size: 0.85rem;
  }
  h1, h2, h3 {
    font-size: 1.2em;
  }
}
