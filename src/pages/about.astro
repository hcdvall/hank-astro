      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      align-items: flex-start;
    }
    .about-avatar {
      width: 140px;
      height: 140px;
      border-radius: 50%;
      object-fit: cover;
      box-shadow: 0 2px 12px 0 rgba(0,0,0,0.10);
      border: 3px solid var(--dracula-pink, #ff79c6);
      background: #222;
      margin-bottom: 1rem;
    }
    .about-content > div {
      flex: 1 1 250px;
    }
    .about-list {
      margin: 1.5rem 0;
      padding-left: 1.5rem;
      list-style: square;
      color: var(--dracula-green, #50fa7b);
      font-size: 1.1em;
    }
    .about-list li {
      margin-bottom: 0.5em;
    }
    @media (max-width: 600px) {
      .about-content {
        flex-direction: column;
        align-items: center;
      }
      .about-avatar {
        margin-bottom: 1.5rem;
      }
    }
  </style>
</MainLayout>
